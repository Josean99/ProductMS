{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DataContext": "Server=host.docker.internal;Port=5432;Database=ProductsMSRead; User Id=postgres;password=user"
  },
  "Serilog": {
    "using": [
      "Serilog.Sinks.File"
    ],
    "MiniumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "..\\logs\\ProductsReadAPI\\ProductsReadAPI-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "formatter": {
            "type": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ]
  },
  "Authority": {
    "MicroserviceId": "4be33d09-8b6a-427f-ac87-38bc752f4d9a"
  },
  "Services": {
    "Jwt": "https://localhost:5001/"
  }
}
